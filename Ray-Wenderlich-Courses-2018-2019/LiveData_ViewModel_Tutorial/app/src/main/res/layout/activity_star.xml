<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/starField"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/black"
  tools:context="tsisyk.app.hypnodollar.ui.StarActivity">

  <Button
    android:id="@+id/startButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="16dp"
    android:background="@android:color/holo_green_dark"
    android:fontFamily="@font/audiowide_regular"
    android:text="@string/start"
    android:textColor="@android:color/white" />

  <Button
    android:id="@+id/resetButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|start"
    android:layout_margin="16dp"
      android:background="@android:color/holo_green_dark"
    android:enabled="false"
    android:fontFamily="@font/audiowide_regular"
    android:text="@string/reset"
    android:textColor="@android:color/white" />


  <ImageView
      android:id="@+id/image_coin"
      android:layout_width="@dimen/coin_size"
      android:layout_height="@dimen/coin_size"
      android:layout_gravity="center"
      android:background="@drawable/ic_dollar" />

</FrameLayout>