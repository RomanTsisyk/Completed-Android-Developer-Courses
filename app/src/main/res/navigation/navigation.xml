<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/time_tracker_fragment">

    <fragment
        android:id="@+id/time_tracker_fragment"
        android:name="tsisyk.app.wctime.timetracker.TimeTrackerFragment"
        android:label="@string/sleep_tracker_fragment"
        tools:layout="@layout/fragment_time_tracker">
        <action
            android:id="@+id/action_sleepTrackerFragment_to_sleepQualityFragment"
            app:destination="@id/time_quality_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_in_right" />
    </fragment>

    <fragment
        android:id="@+id/time_quality_fragment"
        android:name="tsisyk.app.wctime.timequality.TimeQualityFragment"
        android:label="@string/sleep_quality_fragment"
        tools:layout="@layout/fragment_time_quality">
        <argument
            android:name="sleepNightKey"
            app:argType="long" />
        <action
            android:id="@+id/action_timeQualityFragment_to_timeTrackerFragment"
            app:destination="@id/time_tracker_fragment"
            app:launchSingleTop="false"
            app:popUpTo="@+id/time_tracker_fragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>